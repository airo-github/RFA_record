<div class="container pt-3">
  <!-- 投稿一覧 -->
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @activity_records.present? %>
          <%= render partial: 'activity_records/record', collection: @activity_records, as: :activity_record %>
        <% else %>
          <p><%= t('.no_result') %></p>
        <% end %>
      </div>
      <!-- ページネーション -->
      <%= paginate @activity_records %>
    </div>
  </div>
</div>
