<div class='mt-3 bg-light'>
<%= form_for @activity_record, url: activity_record_path(@activity_record), method: :patch do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.label :act_date %>
    <%= f.date_field :act_date %>
  </div>
  <div class="field">
    <%= f.label :act_time %>
    <%= f.text_field :act_time %>
  </div>
  <div class="field">
    <%= f.label :act_calories %>
    <%= f.text_field :act_calories %>
  </div>
  <div class="field">
    <%= f.label :act_distance %>
    <%= f.text_field :act_distance %>
  </div>
  <div class="field">
    <%= f.label :comment %>
    <%= f.text_field :comment %>
  </div>
  <div class="field">
    <%= f.label :visible, '活動記録を表示する場合は☑️してください' %>
    <%= f.check_box :visible, checked: @activity_record.visible %>
  </div>
  <div class="actions">
    <%= f.submit t('defaults.update') %>
  </div>
<% end %>
</div>
