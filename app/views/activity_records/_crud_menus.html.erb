<ul class="crud-menu-btn list-inline justify-content-center" style="float: right;">
  <li class="list-inline-item">
    <%= link_to edit_activity_record_path(activity_record), id: 'button-edit-#{activity_record.id}' do %>
      <i class="bi bi-pen"></i>
    <% end %>
  </li>
  <li class="list-inline-item">
    <%= button_to activity_record_path(activity_record), method: :delete, form: { data: { turbo_confirm: "Are you sure?" } }  do %>
      <i class="bi bi-trash"></i>
    <% end %>
  </li>
</ul>
